{
	"$schema": "https://biomejs.dev/schemas/1.8.2/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"files": {
		"ignore": [
			"dist",
			"node_modules",
			".tshy",
			"**/build/**",
			"cookieconsent2.js",
			"**/cache/**",
			"cookieconsent-init2.js",
			"cookieconsent.css",
			"docs",
			".tshy-build",
			"website/.vitepress/.temp"
		]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"complexity": {
				"noForEach": "warn",
				"noBannedTypes": "warn"
			},
			"suspicious": {
				"noExplicitAny": "off"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": false,
		"attributePosition": "auto",
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 120,
		"lineEnding": "lf"
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"arrowParentheses": "asNeeded",
			"bracketSameLine": false,
			"bracketSpacing": true,
			"jsxQuoteStyle": "double",
			"quoteProperties": "asNeeded",
			"semicolons": "asNeeded",
			"trailingCommas": "all",
			"lineWidth": 120,
			"indentWidth": 2,
			"indentStyle": "tab"
		}
	},
	"json": {
		"formatter": {
			"trailingCommas": "none"
		}
	}
}
